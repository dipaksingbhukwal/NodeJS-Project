<div class="row">
  <img class="logo rounded" src="/img/login.jpg" alt=""><br>
  <h3 class="text-center">Account Registration</h3><br>
  <p> Register to create your own blood bank inventory</p>
</div>
<form action="/users/register" method="post">
  <div class="row">
    <div class="col-md-6 mx-auto">

      <div class="card card-body">
        <p align="center"><b>Account Information</b></p>
        <div class="form-group">
          <label for="email">Blood-Bank/Hospital Name</label>
          <input type="text" name="name" class="form-control" value="{{name}}" required>
        </div>
        <div class="form-group">
          <label for="email">email</label>
          <input type="email" name="email" class="form-control" value="{{email}}" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" class="form-control" value="{{password}}" required>
        </div>
        <div class="form-group">
          <label for="password">Confirm Password</label>
          <input type="password" name="password2" class="form-control" value="{{password2}}" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>

    <div class="col-md-6 mx-auto">
      <div class="card card-body">  <p align="center"><b>Personal Information</b></p>
        <div class="form-group">
          <label for="address">Address</label>
          <input type="text" name="address" class="form-control" value="{{address}}" required>
        </div>
        <div class="form-group">
          <label for="website">Website</label>
          <input type="string" name="website" class="form-control" value="{{website}}">
        </div>
        <div class="form-group">
          <label for="contactno">Contact No:</label>
          <input type="tel"  name="contactno" class="form-control form-control-sm"pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" value="{{contactno}}" required>
        </div>
        <div class="form-group">
          <label for="fax">Fax No:</label>
          <input type="tel"  name="fax" class="form-control form-control-sm"pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" value="{{fax}}">
        </div>
      </div>
    </div>

  </div>
</form>
